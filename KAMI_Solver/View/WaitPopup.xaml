<Window x:Class="KAMI_Solver.View.WaitPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KAMI_Solver.View"
             mc:Ignorable="d" 
             Height="125" Width="190" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
    <TextBlock Text="Please wait..." Margin="0,0,0,10" HorizontalAlignment="Center"/>
    <Button Content="Cancel Process" Click="Cancel_Button"/>
  </StackPanel>
</Window>
